<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center|top">

    <ImageButton
        android:id="@+id/backSUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/union"/>
    <ImageView
        android:id="@+id/lotus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/lotus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/OpenBook"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="4dp"
        android:src="@drawable/openbook"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lotus"/>

    <TextView
        android:id="@+id/ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_below="@+id/OpenBook"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|top"

        android:text="Forgot Password"
        android:textColor="@color/blue1"
        android:fontFamily="@font/inter_bold"
        android:textSize="40dp"
        android:textStyle="bold" />



    <TableRow
        android:id="@+id/tableRowEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForgotPassword"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/ImageE"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/email" />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/nameTilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="-10dp"
            >
            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="-10dp"

                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:hint="Email"
                android:textColorHint="@color/teal_700"/>
        </com.google.android.material.textfield.TextInputLayout>
    </TableRow>



    <android.widget.Button
        android:id="@+id/resetBT"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/tableRowEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_signup_background"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30dp"
        android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/resetBT"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:textSize="20sp"
    android:text="Enter your registered email address to receive instructions"
    android:textColor="@color/grey"/>

</RelativeLayout>
