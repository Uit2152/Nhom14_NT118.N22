<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity">

    <TableRow
        android:id="@+id/headTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:background="@drawable/boder">

        <TextView
            android:id="@+id/pageTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Tài khoản"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- User Avatar -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:contentDescription="ok"
            android:src="@drawable/user"/>

        <!-- User Details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- User Name -->
            <TextView
                android:id="@+id/nameAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- User Email -->
            <TextView
                android:id="@+id/emailAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cài đặt tài khoản"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/NenVaMauChuButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thay đổi màu nền"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp" />



    <Button
        android:id="@+id/ChinhSachButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chính sách"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp" />


    <Button
        android:id="@+id/VeChungToiButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Về chúng tôi"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/EmailGopYButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Email góp ý"

        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/DangXuatButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Đăng xuất"

        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <ImageButton
            android:id="@+id/libraryIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/libtoolbar"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/homeIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/home"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/accountIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/useraccount"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
