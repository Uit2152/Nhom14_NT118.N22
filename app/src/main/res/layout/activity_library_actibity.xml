<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    tools:context=".LibraryActivity"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backBT"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="@android:string/ok"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/subTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Thư viện"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:textSize="32sp" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/contentBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:contentDescription="content">

        <TableRow
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/vien">

            <Button
                android:id="@+id/historyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="Lịch sử đọc"
                android:drawableBottom="@drawable/vien"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bookmarkBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="Đánh dấu"
                android:drawableBottom="@drawable/vien"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20sp" />

        </TableRow>

        <LinearLayout
            android:id="@+id/HTtruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@drawable/vien"
            android:padding="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/LibraryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/row_library" />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <ImageButton
            android:id="@+id/libraryIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/libtoolbar"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/homeIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/home"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/accountIB"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="searchButton"
            android:src="@drawable/useraccount"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>