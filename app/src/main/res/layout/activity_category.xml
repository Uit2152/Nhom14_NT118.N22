<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoryActivity">

    <TableRow
        android:id="@+id/headTableRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/boder">

        <ImageButton
            android:id="@+id/backBT"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@android:string/ok"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/pageTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Thể loại"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:textSize="32sp" />

    </TableRow>

    <HorizontalScrollView
        android:id="@+id/filterHSV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideInset"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/filterLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c1TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:text="  Tiên hiệp  "
                android:background="@drawable/btn"
                android:drawableBottom="@drawable/vien"
                android:typeface="serif"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/c2TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:text="  Kiếm hiệp  "
                android:background="@drawable/btn"
                android:drawableBottom="@drawable/vien"
                android:typeface="serif"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/c3TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:drawableBottom="@drawable/vien"
                android:elevation="4dp"
                android:text="  Ngôn tình  "
                android:textColor="@color/green"
                android:textSize="25sp"
                android:translationZ="2dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/c4TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:elevation="4dp"
                android:text="  Đô thị  "
                android:drawableBottom="@drawable/vien"
                android:typeface="serif"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:translationZ="2dp" />

            <TextView
                android:id="@+id/c5TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:text="  Trinh thám  "
                android:drawableBottom="@drawable/vien"
                android:background="@drawable/btn"
                android:typeface="serif"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:translationZ="2dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_category"
        android:padding="10dp"/>

</LinearLayout>