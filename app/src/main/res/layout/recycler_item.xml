<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="150dp"
            android:id="@+id/recImage"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/text1"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Tên truyện:"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/rectentruyen"
            android:textSize="20sp"
            android:layout_toEndOf="@id/text1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/text2"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/text1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Tác giả:"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/rectacgia"
            android:textSize="20sp"
            android:layout_below="@id/rectentruyen"
            android:layout_toEndOf="@id/text2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/text3"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/text2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Tình trạng:"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/rectinhtrang"
            android:textSize="20sp"
            android:layout_below="@id/rectacgia"
            android:layout_toEndOf="@id/text2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/text4"
            android:textSize="20sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/text3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Số chương:"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/recsochuong"
            android:textSize="20sp"
            android:layout_below="@id/rectinhtrang"
            android:layout_toEndOf="@id/text2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>






    </RelativeLayout>

</androidx.cardview.widget.CardView>